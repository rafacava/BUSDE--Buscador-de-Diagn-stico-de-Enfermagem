<p id="notice"><%= notice %></p>

<h1>Relatorios</h1>

<table>
  <thead>
    <tr>
      <th>Diagnostico</th>
      <th>Fator</th>
      <th>Caracteristica</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relatorios.each do |relatorio| %>
      <tr>
        <td><%= relatorio.diagnostico.nome %></td>
        <td><%= relatorio.fator.nome %></td>
        <td><%= relatorio.caracteristica.nome %></td>
        <td><%= link_to 'Show', relatorio %></td>
        <td><%= link_to 'Edit', edit_relatorio_path(relatorio) %></td>
        <td><%= link_to 'Destroy', relatorio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% query = "SELECT * from relatorios" %>
<p><% puts query %></p>
<br>

