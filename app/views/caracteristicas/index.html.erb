<p id="notice"><%= notice %></p>

<h1>Caracteristicas</h1>

<h2><% current_user.admin %></h2>
  <%= form_tag(caracteristicas_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Buscar Caracteristicas", id:"tags" %>
  <%= submit_tag "Buscar Caracteristicas",:class => "btn-large blue" %>
  <% end %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @caracteristicas.each do |caracteristica| %>
      <tr>
        <td class="nomes"><%= caracteristica.nome %></td>
        <td><%= link_to 'Ver Relatorio', busca_caracteristica_path(:id => caracteristica) %></td>
       <% if current_user && current_user.admin %>
        <td><%= link_to 'Show', caracteristica %></td>
        <td><%= link_to 'Edit', edit_caracteristica_path(caracteristica) %></td>
        <td><%= link_to 'Destroy', caracteristica, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                                                  <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user && current_user.admin %>
                                      
<%= link_to 'New Caracteristica', new_caracteristica_path %>

<% end %>

<script>
  
  
jQuery(function() {
var m = [""];
var classe = document.getElementsByClassName("nomes");
for (var i = 0; i < classe.length; i++) {
            m.push(classe[i].innerText);
 }
 $( "#tags" ).autocomplete({
      source: m
    });
});
  
</script>