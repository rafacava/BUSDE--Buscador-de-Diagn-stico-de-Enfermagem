

<h1>Relatório para o Diagnostico:</h1> <h2 id="demo" class="blue-text"></h2>
<br>
<div class="blue white-text roundead">
<h4>Definição:</h4>
<br>
<div class="row">
  <div class="col s12">
    <h5 class="left-align container" id="defina">&emsp;</h5>  
  </div>
</div>
</div>

<br>
<br>
<br>
<table class="center-align">
  <thead>
    <tr>
      <th>Caracteristicas</th>
      <th>Fatores</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @relatorios.each do |relatorio| %>
      <tr>
        <td class="nome"><%= relatorio.diagnostico.nome %></td>
        <td class="definicao"><%= relatorio.diagnostico.definicao %></td>
        <td><%= relatorio.caracteristica.nome %></td>
        <td><%= relatorio.fator.nome %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script>

$(document).ready( function() {
  adicionarDefinicao();
  adicionarH3();
  
});




    function adicionarH3(){
      var elements = document.getElementsByClassName('nome');
      var segura = document.getElementById("demo");
      var requiredElement = elements[0];
      var txt = requiredElement.innerHTML;
      segura.innerHTML = txt;
      }
    function adicionarDefinicao(){
      var elements = document.getElementsByClassName('definicao');
      var segura = document.getElementById("defina");
      var requiredElement = elements[0];
      var txt = "&emsp;" + requiredElement.innerHTML;
      segura.innerHTML = txt;
      }
</script>
